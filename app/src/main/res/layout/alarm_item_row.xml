<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/label">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="TriggerTime"
        android:id="@+id/itemTriggerTime"
        android:layout_above="@+id/itemWhenring"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Label"
        android:id="@+id/itemLabel"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/itemSnooze"
        android:layout_toEndOf="@+id/itemSnooze"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="WhenRing"
        android:id="@+id/itemWhenring"
        android:layout_alignTop="@+id/itemSnooze"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Snooze"
        android:id="@+id/itemSnooze"
        android:layout_below="@+id/itemLabel"
        android:layout_toRightOf="@+id/itemTriggerTime"
        android:layout_toEndOf="@+id/itemTriggerTime"/>

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/itemSwitch"
        android:checked="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/itemWhenring" />


</RelativeLayout>