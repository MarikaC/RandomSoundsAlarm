<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="insomnia.randomsoundsalarm" >

    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.DISABLE_KEYGUARD" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:configChanges="orientation|screenSize" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AlarmSettingActivity"
            android:configChanges="orientation|screenSize" >
        </activity>

        <receiver android:name=".MyAlarmReceiver"
            >
            <intent-filter>
                <action android:name="MyAlarmAction" />
            </intent-filter>
        </receiver>

        <service android:name=".MyAlarmService" />

        <activity
            android:name=".WakeUpActivity"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name=".ChooseSoundActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_choose_sound"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".BackImageActivity"
            android:label="@string/title_activity_back_image"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
    </application>

</manifest>
